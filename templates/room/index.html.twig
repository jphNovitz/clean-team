{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>
<div class="table-container" role="table" aria-label="Destinations">
    <div class="flex-table header" role="rowgroup">
        <div class="flex-row first" role="columnheader">Country</div>
        <div class="flex-row" role="columnheader">Events</div>
        <div class="flex-row" role="columnheader">Time</div>
        <div class="flex-row" role="columnheader">Fees</div>
    </div>
    <div class="flex-table row" role="rowgroup">
        <div class="flex-row first" role="cell"><span class="flag-icon flag-icon-gb"></span> United Kingdom</div>
        <div class="flex-row" role="cell">Stonehenge, Windsor and Bath with Pub Lunch </div>
        <div class="flex-row" role="cell">19 Sep, 1p.m.</div>
        <div class="flex-row" role="cell">US$500</div>
    </div>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Comment</th>
                <th>Created</th>
                <th>Updated</th>
                <th>ContentChanged</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.number }}</td>
                <td>{{ room.comment }}</td>
                <td>{{ room.created ? room.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.updated ? room.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.contentChanged ? room.contentChanged|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
