{% extends '_bases/base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Toutes les chambres chambres</h1>
    <a href="{{ path('room_index') }}">toutes</a>
    <a href="{{ path('room_index', {'u':'me'}) }}">mes chambres</a>
    <div class="ct_container column">
        <div class="ct_column_header ">
            <div>id</div>
            <div>num</div>
            <div>zone</div>

        </div>

        <div class="ct_column_content">
            {% for room in rooms %}
                <div>
                    <div>
                        {{ room.id }}
                    </div>
                    <div>
                        {{ room.number }}
                    </div>
                    <div>
                        {{ room.area }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
